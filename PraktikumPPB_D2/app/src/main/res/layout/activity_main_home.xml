<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="PPB Apps 2019"
                android:textAlignment="center"
                android:textSize="24sp" />

            <Button
                android:id="@+id/task_button1"
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:background="@drawable/digitalize"
                android:gravity="center"
                android:onClick="task1"
                android:text="Task 1"
                />

            <Button
                android:id="@+id/task_button2"
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:background="@drawable/digitalize"
                android:gravity="center"
                android:onClick="task2"
                android:text="Task 2" />

            <Button
                android:id="@+id/task_button3"
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:background="@drawable/digitalize"
                android:gravity="center"
                android:onClick="task3"
                android:text="Task 3" />

            <Button
                android:id="@+id/task_button4"
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:background="@drawable/digitalize"
                android:gravity="center"
                android:onClick="task4"
                android:text="Task 4" />

            <Button
                android:id="@+id/task_button"
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:background="@drawable/digitalize"
                android:gravity="center"
                android:onClick="task5"
                android:text="Task 5" />


        </LinearLayout>

    </ScrollView>
    


</LinearLayout>